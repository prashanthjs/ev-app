{
  "name": "ev-frontend1",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/ev-frontend1/src",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project ev-frontend1 --web",
  "targets": {
    "docker-build": {
      "dependsOn": [
        "build"
      ],
      "command": "docker build -f apps/ev-frontend1/Dockerfile . -t ev-frontend1"
    },
    "docker-push": {
      "dependsOn": [
        "docker-build"
      ],
      "options": {
        "tagVersion": "latest",
        "registry": "docker.io"
      },
      "command": "docker tag ev-frontend1 {args.registry}/ev-app/ev-frontend1:{args.tagVersion} && docker push {args.registry}/ev-app/ev-frontend1:{args.tagVersion}"
    }
  }
}
